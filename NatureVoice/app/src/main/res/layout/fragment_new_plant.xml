<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTree"
    android:orientation="vertical"
    android:background="@drawable/addbackground">
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a new plant"
        android:textSize="30dp"
        android:textColor="#38ae52"
        android:fontFamily="@font/shantellsans_bold"/>
    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        android:id ="@+id/AddSection">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plant name"
            android:textSize="25dp"
            android:textColor="#0d522c"
            android:fontFamily="@font/shantellsans_regular"/>

            <EditText


                android:layout_marginRight="20dp"
                android:background="@drawable/custom_input"
                android:id="@+id/plant_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Enter Plant Name"
                android:textColor="#0d522c"
                android:textSize="25dp"
                android:fontFamily="@font/shantellsans_regular"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plant Species"
            android:textSize="25dp"
            android:textColor="#0d522c"
            android:fontFamily="@font/shantellsans_regular"/>

        <Spinner
            android:layout_marginRight="25dp"
            android:textColor="#0d522c"
            android:fontFamily="@font/shantellsans_regular"
            android:id="@+id/plant_character_spinner"
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:layout_height="wrap_content"
             />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chose your plant"
            android:textSize="25dp"
            android:textColor="#0d522c"
            android:fontFamily="@font/shantellsans_regular"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id = "@+id/Plant_icon"

            >

            <FrameLayout
                android:background="@drawable/plant_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Plant_icon_1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="55dp"

                >

                <ImageView

                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_background" />

                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/cay1" />

            </FrameLayout>

            <FrameLayout
                android:background="@drawable/plant_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Plant_icon_2"
                android:layout_marginRight="55dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_background" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/cay2" />

            </FrameLayout>

            <FrameLayout
                android:background="@drawable/plant_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Plant_icon_3">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_background" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/cay3" />

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Choose your plant pot"
            android:textColor="#0d522c"
            android:fontFamily="@font/shantellsans_regular"
            />

        <LinearLayout
            android:id="@+id/Plant_pots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >

            <FrameLayout
                android:background="@drawable/plant_selector"
                android:id="@+id/Plant_pot_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="55dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_background" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/chau1" />

            </FrameLayout>

            <FrameLayout
                android:background="@drawable/plant_selector"
                android:id="@+id/Plant_pot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_background" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/chau2" />

            </FrameLayout>

            <FrameLayout
                android:background="@drawable/plant_selector"
                android:id="@+id/Plant_pot_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_background" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/chau3" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="80dp"
            android:layout_marginLeft="115dp">
            <ImageView
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:background="@drawable/round_background">

            </ImageView>
            <Button

                android:id="@+id/lets_plant_button"
                android:layout_width="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#afffc0"
                android:fontFamily="@font/shantellsans_bold"
                android:padding="12dp"
                android:text="Lets plant !"
                android:textColor="#38ae52"
                android:textSize="18sp"


                />
        </FrameLayout>
    </LinearLayout>



</LinearLayout>